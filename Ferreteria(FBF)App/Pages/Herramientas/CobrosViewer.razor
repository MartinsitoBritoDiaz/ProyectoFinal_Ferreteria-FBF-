@using Reportes
@using Models


@if (data is { })
{
    <object data="@pdfContent" width="1000" height="700" name="_blank"></object>
}

@code {
    [Parameter]
    public List<Cobros> Items { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    byte[] data;
    string pdfContent = "";

    protected override void OnInitialized()
    {
        CobrosView();
    }

    public void CobrosView()
    {
        CobrosReport cobros = new CobrosReport();

        data = cobros.Report(Items);
        pdfContent = "data:application/pdf;base64,";
        pdfContent += System.Convert.ToBase64String(data);
    }

}
